{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 9000
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/libs",
                    "remoteRoot": "/app/libs"
                },
                {
                    "localRoot": "${workspaceFolder}/services/user-service",
                    "remoteRoot": "/app/services/user-service"
                },
                {
                    "localRoot": "${workspaceFolder}/services/notification-service",
                    "remoteRoot": "/app/services/notification-service"
                }

            ]
        }, 
        {
            "name": "Python Debugger: Remote Attach Notification Service",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 9001
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/libs",
                    "remoteRoot": "/app/libs"
                },
                {
                    "localRoot": "${workspaceFolder}/services/notification-service",
                    "remoteRoot": "/app/services/notification-service"
                },
                {
                    "localRoot": "${workspaceFolder}/services/user-service",
                    "remoteRoot": "/app/services/user-service"
                }

            ]
        }

    ]
}

